<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            android:id="@+id/preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </FrameLayout>

        <ImageButton
            android:id="@+id/cmd_backward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/cmd_right"
            android:background="@null"
            android:src="@drawable/down" />

        <ImageButton
            android:id="@+id/cmd_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cmd_backward"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:src="@drawable/right" />

        <ImageButton
            android:id="@+id/cmd_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cmd_backward"
            android:layout_toLeftOf="@+id/cmd_backward"
            android:background="@null"
            android:src="@drawable/left" />

        <ImageButton
            android:id="@+id/cmd_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cmd_right"
            android:layout_toRightOf="@+id/cmd_left"
            android:background="@null"
            android:src="@drawable/forward" />

        <ImageButton
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/cmd_forward"
            android:background="@null"
            android:src="@drawable/bluebutton" />

        <ImageButton
            android:id="@+id/down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cmd_left"
            android:layout_toRightOf="@+id/left"
            android:background="@null"
            android:src="@drawable/bluebutton" />

        <ImageButton
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/left"
            android:layout_toRightOf="@+id/down"
            android:background="@null"
            android:src="@drawable/bluebutton" />

        <ImageButton
            android:id="@+id/forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/left"
            android:layout_toRightOf="@+id/left"
            android:background="@null"
            android:src="@drawable/bluebutton" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/forward"
            android:layout_alignLeft="@+id/cmd_left"
            android:textColor="#FFFFFF"
            android:text="Air Controls"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/right"
            android:layout_alignLeft="@+id/cmd_up"
            android:text="Up"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignLeft="@+id/cmd_down"
            android:text="Down"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignRight="@+id/cmd_landing"
            android:text="Air"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF" />

        <ImageButton
            android:id="@+id/cmd_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cmd_down"
            android:layout_marginRight="23dp"
            android:layout_toLeftOf="@+id/cmd_down"
            android:background="@null"
            android:src="@drawable/glossy_button_blank_blue_rectangle" />

        <ImageButton
            android:id="@+id/cmd_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cmd_landing"
            android:layout_marginRight="36dp"
            android:layout_toLeftOf="@+id/textView5"
            android:background="@null"
            android:src="@drawable/glossy_button_blank_blue_rectangle" />

        <ImageButton
            android:id="@+id/cmd_emergency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cmd_landing"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/cmd_left"
            android:background="@null"
            android:src="@drawable/red" />

        <ImageButton
            android:id="@+id/cmd_landing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cmd_backward"
            android:layout_marginRight="36dp"
            android:layout_toLeftOf="@+id/cmd_emergency"
            android:background="@null"
            android:src="@drawable/glossy_button_blank_blue_rectangle" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cmd_emergency"
            android:layout_toLeftOf="@+id/cmd_left"
            android:text="Emergency"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_toRightOf="@+id/left"
            android:text="Ground"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF" />

        <ImageButton
            android:id="@+id/voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/cmd_emergency"
            android:background="@null"
            android:src="@drawable/custombutton" />

    </RelativeLayout>

</RelativeLayout>